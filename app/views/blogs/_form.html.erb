<div class="form">
    <%= form_for [@blog] do |f| %>
        <div class="row">
            <div class="col-md-6">
                <%= f.label :first_name %>
                    <%= f.text_field :first_name, :class => "input" %>
                        <br>
                        <%= f.label :last_name %>
                            <%= f.text_field :last_name, :class => "input" %>
                                <br>
                                <%= f.label :email %>
                                    <%= f.text_field :email, :class => "input" %>
                                        <br>
            </div>
            <div class="col-md-6">
                <%= f.label :phone %>
                    <%= f.text_field :phone, :class => "input" %>
                        <br>
                        <%= f.label :country %>
                            <%= f.select :country, ['Kenya','Uganda','Tanzania','South Africa','Egypt','England','Hawaii','Senegal','Somalia','Congo','Rwanda']%>
            </div>
        </div>
        <%= f.submit "Download Book"%>
            <% end %>
</div>