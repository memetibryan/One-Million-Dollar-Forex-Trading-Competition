<div class="form">
    <%= form_for [@competition] do |f| %>
        <div class="row">
            <div class="col-md-6">
                <%= f.label :name %>
                    <%= f.text_field :name, :class => "input" %>
                                <%= f.label :email %>
                                    <%= f.text_field :email, :class => "input" %>
                                        <br>
            </div>
            <div class="col-md-6">
                <%= f.label :phone %>
                    <%= f.text_field :phone, :class => "input" %>
            </div>
        </div>
        <%= f.submit "Apply"%>
            <% end %>
</div>